{
  "compilerOptions": {
    "composite": true, // Hinzugefügt für referenzierte Projekte
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler", // Beibehalten oder auf "node" setzen, wenn "bundler" Probleme macht
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // Entfernt oder auf false setzen für "composite": true
    "jsx": "preserve",

    /* Declarations output: avoid overwriting .vue.d.ts in src */
    "declaration": true,
    "declarationDir": "./.types",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/*.vue.d.ts",
    "src/mock/**"
  ]
}
