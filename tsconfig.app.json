{
  "compilerOptions": {
    "composite": true, // Hinzugefügt für referenzierte Projekte
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "ESNext", // Hinzugefügt für breitere Abdeckung
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler", // Beibehalten oder auf "node" setzen, wenn "bundler" Probleme macht
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // Entfernt oder auf false setzen für "composite": true
    "jsx": "preserve",
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
