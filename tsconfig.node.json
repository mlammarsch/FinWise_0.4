{
  "compilerOptions": {
    "composite": true, // Hinzugefügt für referenzierte Projekte
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true, // Explizit hinzufügen
    "types": ["node", "vitest/globals"], // Vitest Globals hier hinzufügen

    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // Entfernt, da noEmit nicht mehr true ist
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // Entfernt oder auf false setzen für "composite": true

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts", "test/**/*.ts"] // Testverzeichnis hinzufügen
}
